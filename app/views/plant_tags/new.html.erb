<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <h1>Add a new Tag for <%= @plant.name %></h1>
      <%= simple_form_for [@plant,@plant_tag] do |f| %>
        <%= f.association :tag, input_html: {multiple: true, data:{controller: "tom-select"}}, include_hidden: false %>
        <%= f.submit "Add a Tag", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
