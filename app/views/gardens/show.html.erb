<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( '<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container my-3">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
        <%= plant.name %>
        <%= button_to "X", plant_path(plant), method: :delete, class: "btn-x" %>
        <%#= link_to "X", plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Are you Sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a plant:</h4>
      <%= simple_form_for [@garden,@plant] do |f| %>
      <%= f.input :name, placeholder: "Tree" %>
      <%= f.input :image_url, placeholder: "cool_image.jpg" %>
      <%= f.submit "ADD", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


